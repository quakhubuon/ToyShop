@model ToyShop.HangSanXuat
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <!-- row -->
    <div class="row">
        <div class="col-xl-12 col-xxl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm hãng sản xuất</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        @using (Html.BeginForm("Edit", "HangSanXuatAdmin", FormMethod.Post))
                        {
                            <input type="hidden" value="@Model.MaHangSanXuat" class="form-control input-default" name="MaHangSanXuat">
                            <div class="form-group">
                                <label>Tên hãng sản xuất</label>
                                <input type="text" value="@Model.TenHangSanXuat" class="form-control input-default" name="TenHangSanXuat">
                            </div>
                            <div class="form-group">
                                <label>Tình trạng hãng sản xuất</label>
                                <select class="form-control" name="TinhTrangHSX">
                                    @if (Model.TinhTrangHSX == 0)
                                    {
                                        <option value="1">Khóa</option>
                                        <option value="0" selected>Mở</option>
                                    }
                                    else
                                    {
                                        <option value="1" selected>Khóa</option>
                                        <option value="0">Mở</option>
                                    }
                                </select>
                            </div>
                            <input type="submit" class="btn  btn-square btn-info" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

