
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <!-- row -->
    <div class="row">
        <div class="col-xl-12 col-xxl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm loại sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        @using (Html.BeginForm("Create", "LoaiSanPhamAdmin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Mã loại sản phẩm</label>
                                <input type="text" class="form-control input-default" name="MaLoaiSanPham">
                            </div>
                            <div class="form-group">
                                <label>Tên loại sản phẩm</label>
                                <input type="text" class="form-control input-default" name="TenLoaiSanPham">
                            </div>
                            <div class="form-group">
                                <label>Tình trạng loại sản phẩm</label>
                                <select class="form-control" name="TinhTrangLSP">
                                    <option selected>--Chọn tình trạng--</option>
                                    <option value="1">Khóa</option>
                                    <option value="0">Mở</option>
                                </select>
                            </div>
                            <input type="submit" class="btn  btn-square btn-info" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

