
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="container-fluid">
    <!-- row -->
    <div class="row">
        <div class="col-xl-12 col-xxl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        @using (Html.BeginForm("Create", "SanPhamAdmin",FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label>Mã sản phẩm</label>
                                <input type="text" class="form-control input-default" name="MaSanPham">
                            </div>
                            <div class="form-group">
                                <label>Tên sản phẩm</label>
                                <input type="text" class="form-control input-default" name="TenSanPham">
                            </div>
                            <div class="form-group">
                                <label>Hình sản phẩm</label>
                                <input type="file" class="form-control input-default" name="Hinh">
                            </div>
                            <div class="form-group">
                                <label>Giá sản phẩm</label>
                                <input type="number" class="form-control input-default" name="Gia">
                            </div>
                            <div class="form-group">
                                <label>Mô tả sản phẩm</label>
                                <input type="text" class="form-control input-default" name="MoTa">
                            </div>
                            <div class="form-group">
                                <label>Số lượng sản phẩm</label>
                                <input type="number" class="form-control input-default" name="SoLuong">
                            </div>
                            <div class="form-group">
                                <label>Lượt xem sản phẩm</label>
                                <input type="number" class="form-control input-default" name="LuotXem">
                            </div>
                            <div class="form-group">
                                <label>Hãng sản xuất</label>
                                <select class="form-control" name="MaHangSanXuat">
                                    <option>--Chọn hãng sản xuất--</option>
                                    @foreach(var item in ViewBag.ListHangSanXuat)
                                     {
                                        <option value="@item.MaHangSanXuat">@item.TenHangSanXuat</option>
                                     }                                   
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Loại sản phẩm</label>
                                <select class="form-control" name="MaLoaiSanPham">
                                    <option>--Chọn loại sản phẩm--</option>
                                    @foreach (var item in ViewBag.ListLoaiSanPham)
                                    {
                                        <option value="@item.MaLoaiSanPham">@item.TenLoaiSanPham</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Tình trạng sản phẩm</label>
                                <select class="form-control" name="TinhTrang">
                                    <option selected>--Chọn tình trạng--</option>
                                    <option value="0">Mở</option>
                                    <option value="1">Khóa</option>
                                </select>
                            </div>
                            <input type="submit" class="btn  btn-square btn-info" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
